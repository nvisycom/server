# Nvisy Docker Environment Configuration
# Copy this file to .env and configure as needed

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nvisy
POSTGRES_PASSWORD=changeme
POSTGRES_DB=nvisy

# NATS
NATS_PORT=4222
NATS_MONITOR_PORT=8222

# Qdrant
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Server
SERVER_PORT=8080
REQUEST_TIMEOUT=30
SHUTDOWN_TIMEOUT=30

# Authentication (PEM-encoded keys)
# AUTH_PUBLIC_PEM=
# AUTH_PRIVATE_PEM=

# CORS
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.nvisy.com
# CORS_MAX_AGE=3600

# Logging
RUST_LOG=info
RUST_BACKTRACE=0
