# Environment Configuration
# Copy this file to .env and adjust values as needed.

# Server
HOST=127.0.0.1
PORT=8080
REQUEST_TIMEOUT=30
SHUTDOWN_TIMEOUT=30

# TLS (optional)
TLS_CERT_PATH=./cert.pem
TLS_KEY_PATH=./key.pem

# Authentication
# Generate keys with: make generate-keys
AUTH_PUBLIC_PEM_FILEPATH=./public.pem
AUTH_PRIVATE_PEM_FILEPATH=./private.pem

# CORS
CORS_ORIGINS=http://localhost:3000,https://app.nvisy.com
CORS_MAX_AGE=3600
CORS_ALLOW_CREDENTIALS=true

# OpenAPI
OPENAPI_JSON_PATH=/api/openapi.json
OPENAPI_SCALAR_PATH=/api/scalar

# PostgreSQL
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_CONNECTION_TIMEOUT_SECS=30
POSTGRES_IDLE_TIMEOUT_SECS=600

# NATS
NATS_URL=nats://localhost:4222
NATS_TOKEN=
NATS_CLIENT_NAME=nvisy-server
NATS_CONNECT_TIMEOUT_SECS=30
NATS_REQUEST_TIMEOUT_SECS=30
NATS_MAX_RECONNECTS=10

# Pipeline
PIPELINE_MAX_CONCURRENT_JOBS=10

# Ollama
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_VLM_MODEL=qwen3-vl

# Logging
RUST_LOG=debug
RUST_BACKTRACE=0
