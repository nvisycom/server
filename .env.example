# Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
REQUEST_TIMEOUT=30
SHUTDOWN_TIMEOUT=30

# PostgreSQL Database
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_MIN_CONNECTIONS=2

# Authentication (generate keys with: make generate-keys)
AUTH_PUBLIC_PEM_FILEPATH=./public.pem
AUTH_PRIVATE_PEM_FILEPATH=./private.pem

# External Services
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/

# PaddleX Document Processing
PADDLEX_API_KEY=your-paddlex-api-key-here
PADDLEX_BASE_URL=http://localhost:8080/api/v1/

# Mistral AI OCR Services
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_BASE_URL=https://api.mistral.ai/v1/

# MinIO Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=documents

# NATS Messaging
NATS_URL=nats://127.0.0.1:4222
NATS_CLIENT_NAME=nvisy-api
NATS_CONNECT_TIMEOUT=30
NATS_REQUEST_TIMEOUT=30
NATS_MAX_RECONNECTS=10
NATS_RECONNECT_DELAY=2

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.nvisy.com
CORS_MAX_AGE=3600
CORS_ALLOW_CREDENTIALS=true

# Data Collection Policy
DATA_COLLECTION_POLICY=true

# Service Configuration
SERVICE_NAME=nvisy-api
SERVICE_VERSION=0.1.0
SERVICE_ENV=development

# Retry Configuration
DEFAULT_RETRY_ATTEMPTS=3
DEFAULT_RETRY_BACKOFF=100
DEFAULT_RETRY_MAX_BACKOFF=5000

# Logging
RUST_LOG=info
RUST_BACKTRACE=0

# TLS (Optional - requires 'tls' feature)
TLS_CERT_PATH=./cert.pem
TLS_KEY_PATH=./key.pem
